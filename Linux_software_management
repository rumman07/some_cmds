$kubectl get nodes -o jsonpath='{range .items[*]}{@.metadata.name}:{range @.status.conditions[*]} {@.type}={@.status};{end}{end}' | tr ';' "\n" | grep "Ready=True"
$kubectl get pods 
$kubectl describe pod <name_of_pod>
